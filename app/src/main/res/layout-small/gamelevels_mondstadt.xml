<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mondstadt_levels_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/header"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_btn"
                android:paddingLeft="25dp"
                android:text="@string/back_btn"
                android:textAllCaps="false"
                android:textColor="#616161"
                android:textSize="20sp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/levelsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/levelsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buttonVenti"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_anemo"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:text="@string/mondstat_venti"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/buttonBarbara"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_gydro"
                    android:text="Барбара"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/buttonDiluc"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_pyro"
                    android:text="Дилюк"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/buttonLiza"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_electro"
                    android:text="Лиза"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/buttonKeya"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_cryo"
                    android:text="Кейа"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/buttonNoel"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_geo"
                    android:text="Ноэлль"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/buttonJean"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_anemo"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:text="@string/level_jean"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/buttonMona"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_gydro"
                    android:text="@string/level_mona"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/buttonKlee"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/btn_pyro"
                    android:text="@string/level_klee"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>