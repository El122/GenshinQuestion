<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/regionBack"
    android:background="@drawable/mondstast_back">

    <RelativeLayout
        android:id="@+id/region_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header"
            android:paddingBottom="100dp">
            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_btn"
                android:paddingLeft="25dp"
                android:text="@string/back_btn"
                android:textAllCaps="false"
                android:textColor="@color/mainWhite_op"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/regionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mainWhite"
                android:gravity="center"
                android:textSize="30sp"
                android:text="Мондштадт" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="22dp"
            android:paddingBottom="90dp">
            <Button
                android:id="@+id/prev_region"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:background="@drawable/prev_btn"
                android:textAllCaps="false"
                android:layout_marginRight="30dp"
                android:textColor="#616161"
                android:textSize="20sp" />
            <Button
                android:id="@+id/startRegion"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/start_btn"
                android:text="@string/start_btn"
                android:textColor="@color/textColor"
                android:textAllCaps="false"
                android:textSize="30sp" />
            <Button
                android:id="@+id/next_region"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:background="@drawable/next_btn"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                android:textColor="#616161"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>